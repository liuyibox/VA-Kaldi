<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.lenss.liuyi.GAssistantActivity">
        <Button
            android:id="@+id/recognize_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recognize File"/>
        <Button
            android:id="@+id/recognize_mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recognize Microphone"/>
        <Button
            android:id="@+id/action_submit_topology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Topology"/>
        <Button
            android:id="@+id/action_cancel_topology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Topology"/>
        <TextView
            android:id="@+id/result_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:scrollbars="vertical"
            android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>